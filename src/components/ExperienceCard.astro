---
interface Props {
  title: string;
  description: string;
  date: string;
  link: string;
  rol: string;
}

const { title, description, date, link, rol } = Astro.props;
---

<div
  class="hover:shadow-xl border-[1px] border-white hover:border-[#94949427] hover:p-5 rounded-md duration-200"
>
  <header class="flex justify-between items-center">
    <a href={link} class="group" target="_blank"
      ><h3>{title}</h3>

      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 50 50"
        fill="currentColor"
        class="text-white group-hover:text-[#09f] transition ease-in-out duration-200"
      >
        <line
          x1="10"
          y1="25"
          x2="40"
          y2="25"
          stroke="currentColor"
          stroke-width="4"></line>
        <polyline
          points="30,10 40,25 30,40"
          stroke="currentColor"
          stroke-width="4"
          fill="none"></polyline>
      </svg>
    </a>
    <span>{date}</span>
  </header>
  <h4>{rol}</h4>
  <div>
    <p>
      {description}
    </p>
  </div>
</div>

<style>
  header > span {
    font-size: 0.9rem;
    color: #666;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  h4 {
    font-size: 0.9rem;
    margin: 0.2rem 0.5rem 0.5rem 0;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
  }

  p {
    font-size: 0.9rem;
    color: #666;
  }
  a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #000;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
